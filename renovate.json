{
  "extends": [
    "config:base"
  ],
  "timezone": "Asia/Tokyo",
  "labels": ["dependencies"],
  "assignees": ["@yu-ogi"],
  "reviewers": ["@yu-ogi"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "separateMinorPatch": true,
  "packageRules": [
    {
      "packagePatterns": ["^@akashic/"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["minor"],
      "groupName": "minor dependencies"
    },
    {
      "matchUpdateTypes": ["patch"],
      "groupName": "patch dependencies"
    }
  ]
}
